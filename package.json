{
  "scripts": {
    "dev": "concurrently \"npm:server\" \"npm:watch\"",
    "server": "php -S localhost:8888 -t public server.php",
    "watch": "parcel watch src/index.js --no-source-maps -d ./",
    "build": "parcel build src/index.js --no-source-maps --experimental-scope-hoisting -d ./"
  },
  "posthtml": {
    "recognizeSelfClosing": true
  },
  "devDependencies": {
    "@prettier/plugin-php": "^0.16.3",
    "@vue/component-compiler-utils": "^3.2.0",
    "concurrently": "^6.2.0",
    "prettier": "^1.19.1",
    "vue-template-compiler": "^2.6.12"
  },
  "dependencies": {
    "vue": "^2.6.12",
    "vue-hot-reload-api": "^2.3.4"
  }
}
